<div id="campaign-performance" class="min-vh-100 bg-gray-lighter" v-cloak>
  <div class="container">
    <h1 class="py-2 headline font-weight-bold text-center">Marketing Campaign Performance</h1>
    <div class="card p-2">
      <div class="row">
        <div class="col-12 py-3">
          <div class="row">
            <div class="col-8 col-md-9">
              <div class="flatpickr input-group">
                <input type="text" class="form-control" placeholder="Select Date Range..." data-input> <!-- input is mandatory -->

                <button class="btn btn-secondary input-button" title="toggle" data-toggle>
                  <i class="fa fa-calendar"></i>
                </button>

                <button class="btn btn-danger input-button" title="clear" data-clear>
                  <i class="fa fa-times"></i>
                </button>
              </div>
            </div>
            <div class="col-4 col-md-3">
              <div class="row">
                <div class="col-6">
                  <button class="btn btn-primary" @click="startSearch">
                    <i class="fa fa-search"></i>
                    Search</button>
                </div>
                <div v-if="campaigns && campaigns.length > 0" class="col-6">
                  <button class="btn btn-secondary" @click="csvExport(campaigns)">
                    <i class="fa fa-download"></i>
                    Export</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12">
          <table class="table table-striped table-responsive-sm table-responsive-md table-responsive-lg">
            <thead>
            <tr>
              <th scope="col">Campaign ID</th>
              <th scope="col">Signups</th>
              <th scope="col">Confirmed Accounts</th>
              <th scope="col">Transactions</th>
              <th scope="col">$ Billed</th>
            </tr>
            </thead>
            <tbody>
            <tr v-for="campaign in campaigns">
              <th scope="row">{{ campaign.campaignId }}</th>
              <td class="text-center">{{ campaign.signups }}</td>
              <td class="text-center">{{ campaign.confirmed }}</td>
              <td class="text-center">{{ campaign.transactions }}</td>
              <td class="text-center">{{ campaign.billedAmount }}</td>
            </tr>
            <tr class="table-dark">
              <th scope="col"><span class="font-weight-bold">TOTAL</span></th>
              <th scope="col" class="text-center">{{ campaigns.map(campaign => campaign.signups).reduce((a, b) => a + b, 0) }}</th>
              <th scope="col" class="text-center">{{ campaigns.map(campaign => campaign.confirmed).reduce((a, b) => a + b, 0) }}</th>
              <th scope="col" class="text-center">{{ campaigns.map(campaign => campaign.transactions).reduce((a, b) => a + b, 0) }}</th>
              <th scope="col" class="text-center">{{ campaigns.map(campaign => campaign.billedAmount).reduce((a, b) => a + b, 0) }}</th>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
