<!-- Writing APP page -->
<section class="cprecap-singup" id="recap-signup">
    <div class="container-fluid">
        <div class="row justify-content-center mt-5">
            <div class="col-11 text-center">
                <h1 class="text-white mb-3">ChinesePod RECAP APP</h1>
