                                    <tbody>
                                    <tr>
                                        <th scope="col" class="text-center">&nbsp;</th>
                                        <th scope="col" class="text-center">Work regularly with</th>
                                        <th scope="col" class="text-center">Work occasionally with</th>
                                        <th scope="col" class="text-center">Installed but uninstalled</th>
                                        <th scope="col" class="text-center">Have never worked with</th>
                                    </tr>
                                    <tr class="bg-light">
                                        <th scope="row">ChinesePod Recap APP</th>
                                        <td class="text-center">
                                            <div class="custom-control custom-radio">
