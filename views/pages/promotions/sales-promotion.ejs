                        </div>
                        <div class="col-lg-4 col-sm-6 col-xl-6">
                          <label for="country">Country<span class="required-mark">&nbsp;*</span></label>
                          <select v-model="formData.country" name="country" required>
                            <option v-for="country in countries" :value="country.code">{{ country.name }}</option>
                          </select>
                          <label for="state">{{ formData.country === 'US' ? 'State' : 'Region' }}<span v-show="formData.country === 'US'" class="required-mark">&nbsp;*</span></label>
                          <select v-if="formData.country === 'US'" v-model="formData.state" name="state" :disabled="syncingStates" required>
                            <option value="" selected="selected" disabled>Select State</option>
                            <option v-for="(value, name) in states" :value="name">{{ value }}</option>
                          </select>
                          <input v-else type="text" name="state" placeholder="Region" v-model.trim="formData.state"/>
                          <input type="text" name="zip" :placeholder="formData.country === 'US' ? 'ZIP' : 'Post Code'" class="mt-2" v-model.trim="formData.zip"/>
